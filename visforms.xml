<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0.0" method="upgrade">
	<name>visforms</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>June 2021</creationDate>
	<author>Aicha Vack</author>
	<authorEmail>contact@vis-solutions.de</authorEmail>
	<authorUrl>www.vi-solutions.de</authorUrl>
	<copyright>Copyright (C) vi-solutions. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<!--  The version string is recorded in the components table -->
	<version>3.14.5</version>
	<vfsubminversion>3.5.0</vfsubminversion>
	<min_visforms_version>2.0.0</min_visforms_version>
	<last_modified_view_files_version>3.14.0</last_modified_view_files_version>
	<loggerName>Visforms</loggerName>
	<!-- The description is optional and defaults to the name -->
	<description>COM_VISFORMS_DESC</description>
	<scriptfile>script.php</scriptfile>

	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>visforms.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<filename>metadata.xml</filename>
		<folder>captcha</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>
		<folder>controllers</folder>
        <folder>helpers</folder>
		<folder>lib</folder>
        <folder>layouts</folder>
	</files>
	<media destination="com_visforms" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>fonts</folder>
		<folder>tcpdf</folder>
	</media>	
	<install>
		<sql>
			<file charset="utf8" driver="mysql">sql/install.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">sql/uninstall.utf8.sql</file>
		</sql>
	</uninstall>
    <update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	<administration>
		<!-- Administration Menu Section -->
		<menu img="components/com_visforms/images/icon-16-visforms.png">COM_VISFORMS</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
		<!-- Site Main File Copy Section -->
			<filename>index.html</filename>
			<filename>visforms.php</filename>
			<filename>controller.php</filename>
			<filename>LICENSE.txt</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>include.php</filename>
			<folder>controllers</folder>
			<folder>css</folder>		
			<folder>images</folder>
			<folder>js</folder>
			<folder>layouts</folder>
			<folder>lib</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>sql</folder>
			<folder>language</folder>
			<folder>helpers</folder>
			<folder>pdfs</folder>
			<folder>json</folder>
		</files>
	</administration>
	<modules>
		<module module="mod_visforms" client="site" version="3.17.3" />
	</modules>
	<plugins>
		<plugin plugin="visforms" group="visforms" version="1.3.1" />
		<plugin plugin="visforms" group="actionlog" version="1.0.1" />
		<plugin plugin="visforms" group="privacy" version="1.0.1" />
		<plugin plugin="spambotcheck" group="visforms" version="3.6.1" />
		<plugin plugin="visformfields" group="editors-xtd" version="3.6.0" />
	</plugins>
	<libraries>
		<library library="visolutions" version="1.6.1" />
	</libraries>
    <updateservers>
		<server type="extension" priority="1" name="Visforms">https://vi-solutions.de/updates/visforms/extension.xml</server>
		<server type="extension" priority="1" name="Visforms">https://vi-solutions.de/updates/visforms_3_8/extension.xml</server>
	</updateservers>
</extension>
